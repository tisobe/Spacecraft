        function WindowOpener(imgname) {
            msgWindow = open("","displayname","toolbar=no,directories=no,menubar=no,location=no,scrollbars=no,status=no,,width=1050,height=550,resize=no");
            msgWindow.document.clear();
            msgWindow.document.write("<html><title>Trend plot:   "+imgname+"</TITLE>");
            msgWindow.document.write("<body bgcolor='black'>");
            msgWindow.document.write("<img src='./Angles/"+imgname+"' border =0 ><p></p></body></html>")
            msgWindow.document.close();
            msgWindow.focus();
        }
    </script>


